*
  outline: none

html
  background-color #fff
  min-width 960px

.proxima
  font-family "proxima-nova", sans-serif

header
  #visualizer, #explore
    cursor pointer

#wrapper
  margin-top 50px
  min-height 700px

  .landing-splash
    width 100%
    height 650px
    background-image url('../images/splash-bg.jpg')
    background-repeat no-repeat
    background-size cover
    background-position  center center
    position fixed
    
  .landing-copy
    z-index 10
    height 450px
    margin-top 60px
    padding 20px 20px 40px 20px

    h1
      z-index 10
      color #222
      font-size 60px
      font-weight 800

    h3
      color #222
      font-size 30px
      letter-spacing 1px
      margin 0
    h2
      margin 2px
    p
      margin 20px 0 20px 0 

    form
      text-align center
      margin-top 10px;
      input[type="text"]
        text-align center
        height 50px
        padding-top 5px
        font-size 20px
      input[type='text']:focus
        border-color #999
        box-shadow: inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(126,126,126,0.4);

      #getStartedButton
        width 200px
        margin 5px auto

  .backer
    z-index 1
    height 410px
    padding 20px
    background-color #eee
    opacity 0.8
    margin-top -425px
    border-radius 10px

  .about-datsy
    margin-top 660px
    background-color #fff

    h1
      font-weight 800
      font-size 50px

    .marketing
      margin-top 30px
      img
        height 140px
        width 140px
        margin-left 100px

      h2
        text-align center

      a
        margin-left 115px;
    
    .exampleGraphs
      margin 35px 0
      
      h1
        margin 0 0 30px 0

footer
  border-top 1px solid #ccc
  clear both
  padding 50px 10px 50px 10px
