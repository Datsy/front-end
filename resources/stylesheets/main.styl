*
  outline: none

html
  background-color #fff

header
  #visualizer, #explore
    cursor pointer

#wrapper
  margin-top 50px
  min-height 450px

  .landing-splash
    width 100%
    height 650px
    background-image url('../images/splash-bg.jpg')
    background-repeat no-repeat
    background-size cover
    background-position  center center
    position fixed
    
  .landing-copy
    z-index 10
    height 450px
    margin-top 60px
    padding 20px 20px 40px 20px

    h1
      z-index 10
      color #222
      font-size 60px
      font-weight 800

    h3
      color #222
      font-size 30px
      letter-spacing 1px
      margin 0
    h2
      margin 2px
    p
      margin 20px 0 20px 0 

    form
      text-align center
      margin-top 10px;
      input[type="text"]
        text-align center
        height 50px
        padding-top 5px
        font-size 20px
      input[type='text']:focus
        border-color #999
        box-shadow: inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(126,126,126,0.4);
      input[type='text']:focus::-webkit-input-placeholder
        color transparent
      input[type='text']:focus::-moz-placeholder
        color transparent

      #getStartedButton
        width 200px
        margin 5px auto
      #getStartedButton:active
        box-shadow none
        outline none

  .backer
    z-index 1
    height 410px
    padding 20px
    background-color #eee
    opacity 0.8
    margin-top -425px
    border-radius 10px

.about-datsy-strip
  position relative
  width 100%
  background-color #fff
  margin-top 135px
  

  .about-datsy
    
    h1
      font-weight 800
      font-size 50px

    .marketing
      margin-top 30px

      img
        position relative
        height 140px
        width 140px
        left 50%
        margin-left -70px

      h2
        text-align center
    
    .exampleGraphs
      margin 35px 0
      
      h1
        margin 0 0 30px 0

.buffer
  margin 20px 0

footer
  border-top 1px solid #ccc
  padding 50px 10px 50px 10px
  background-color #fff

@media all and (max-width: 1200px) and (min-width: 990px)
  #wrapper
    .landing-copy
      margin-top 40px

    .backer
      height 495px
      margin-top -425px
