.top-bar
  margin 0 20px 0 0

  .cart
    overflow hidden

  .panel
    margin-bottom 5px

    .panel-heading
      padding 5px 0

      h4
        margin 0
        padding 0
        color #666
    
    .panel-body
      padding 3px

      button
        margin-top 7px
        width 60px

      .cart-text
        text-align center
        margin-top 3px

        p
          margin 0
          font-size 13px
        
        p.total-columns-added
          font-size 18px
          font-weight 800

.explore
  margin-top 70px
  
  h1
    margin-bottom 4px
    margin-top 5px

  h3
    margin-top 0

  header
    margin 15px auto 5px auto
    width 100%
    padding 3px 3px

    p
      display inline-block
      font-weight 600
      font-size 16px
      margin 0
      color #999
      cursor pointer

    p:last-child
      margin-right 0px
    
    p:hover
      color #222

    span
      margin-left 6px

.explore-datasets
  margin 10px 0 20px 0

  .dataset-table-name
    width 40%
    font-weight 800
    display inline-block
    float left

  .dataset-source
    width 40%
    font-weight 300
    display inline-block

  .dataset-rating
    width 10%
    display inline-block
    float right

  .ui-accordion-header
    font-size 18px
    font-weight 700
    letter-spacing 1px
    color #FFF
    background #4cae4c
    border-color #2F8A2F

  .ui-accordion-header:hover
    background #409C40

  .ui-accordion-content
    padding 10px
    padding 0
    margin 0
  
    li.column-listing
      list-style none
      margin 7px 0 7px 0
      padding 15px 10px

      div.column-descriptions

        p
          margin 2px 0
          padding 0

      div.column-add-button

        button
          margin 3px auto
          font-size 10px
          height 30px

        button:focus
          outline none
          box-shadow none

    li.column-listing:nth-child(odd)
      background-color #eee

    li.column-listing:hover
      background-color #E3FFE9


  .ui-state-hover
    color #fff

.modal

  .rows
    padding 0
    margin 0
    
  .rowValue
    list-style none
    padding 10px 10px 3px 10px
  
  .rowValue:nth-child(odd)
    background-color #ddd
    
  