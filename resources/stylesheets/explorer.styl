.top-bar
  height 100px

  .cart
    height 100%
    margin-bottom 0

.explore
  margin-top 70px
  
  h1
    margin-bottom 4px

  h3
    margin-top 0

  header
    width 100%
    height 40px
    background-color #ccc
    padding 7px 19px 5px 19px
    margin 8px 0 4px 0

    p
      display inline-block
      font-weight 600
      font-size 18px
      color #333

    p:last-child
      margin-right 0px
    
    p:hover
      color #666

    span
      margin-left 6px

.explore-datasets
  margin 10px 0 20px 0

  .ui-accordion-header
    font-size 18px
    font-weight 700
    letter-spacing 1px
    color #FFF
    background #4cae4c
    border-color #2F8A2F

  .ui-accordion-header:hover
    background #409C40

  .ui-accordion-content
    padding 10px
    padding 0
    margin 0
  
    li.column-listing
      list-style none
      margin 7px 0 7px 0
      padding 15px 10px

      div.column-descriptions

        p
          margin 2px 0
          padding 0

      div.column-add-button

        button
          margin 3px auto
          font-size 10px
          height 30px

        button:focus
          outline none
          box-shadow none

    li.column-listing:nth-child(odd)
      background-color #eee

    li.column-listing:hover
      background-color #E3FFE9


  .ui-state-hover
    color #fff

.modal

  .rows
    padding 0
    margin 0
    
  .rowValue
    list-style none
    padding 10px 10px 3px 10px
  
  .rowValue:nth-child(odd)
    background-color #ddd
    
  