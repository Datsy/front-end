.explore
  margin-top 70px
  
  h1
    margin-bottom 4px

  h3
    margin-top 0

  header
    width 100%
    height 40px
    background-color #ccc
    padding 7px 19px 5px 19px
    margin 8px 0 4px 0

    p
      display inline-block
      font-weight 600
      font-size 18px
      color #333
      margin-right 183px

    p:last-child
      margin-right 0px
    
    p:hover
      color #666

    span
      margin-left 6px

.explore-datasets
  margin 10px 0 20px 0

  .ui-accordion-header
    font-size 18px
    font-weight 700

  .ui-accordion-content
    padding 10px
  
    ul.column-list
      padding 0
      margin 0

      li.column-listing
        list-style none
        margin 7px 0 7px 0
        padding 15px 10px
        height 90px

        div.column-descriptions

          p
            margin 0
            padding 0

        div.column-descriptions

          button.addColumnForVis
            font-size 12px

      li.column-listing:nth-child(odd)
        background-color #eee
